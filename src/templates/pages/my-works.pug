							.opinion__subscribe
								.opinion__img 
									img.opinion__img--img(src="./assets/images/photo1.jpg")
								.opinion__name <b>NAME</b><br> text
						.opinions__item.opinion 
							.opinion__text Lorem ipsum dolor sit amet consectetur adipisicing elit. Amet unde ullam, reprehenderit ea ipsam necessitatibus corporis quo harum iusto itaque.
							.opinion__subscribe
								.opinion__img 
									img.opinion__img--img(src="./assets/images/photo1.jpg")
								.opinion__name <b>NAME</b><br> text
					.feedback-form
						.feedback__bg
							.feedback-form__title.title3 Связаться со мной
							form.feedback-form__form
								.feedback-form__row
									input.feedback-form__input(type="text" name="name" placeholder="Имя" required)
								.feedback-form__row
									input.feedback-form__input(type="email" name="email"  placeholder="Email" required)
								.feedback-form__row
									textarea.feedback-form__textarea(cols="50" rows="7"  placeholder="Ваше сообщение" required)
